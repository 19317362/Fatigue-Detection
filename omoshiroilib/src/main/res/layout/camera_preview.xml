<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:background="#FF000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.martin.ads.omoshiroilib.glessential.GLRootView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.martin.ads.omoshiroilib.ui.CaptureAnimation
        android:id="@+id/capture_animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>

    <RelativeLayout android:id="@+id/camera_tool" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
        <com.martin.ads.omoshiroilib.ui.module.EffectsButton
            android:id="@+id/btn_camera_setting" android:background="@drawable/camera_setting" android:layout_width="55.0dip" android:layout_height="55.0dip" android:layout_centerInParent="true"/>
        <com.martin.ads.omoshiroilib.ui.module.EffectsButton android:id="@+id/btn_switch_camera" android:background="@drawable/bg_camera" android:layout_width="55.0dip" android:layout_height="55.0dip" android:layout_alignParentRight="true"/>
        <com.martin.ads.omoshiroilib.ui.module.EffectsButton
            android:id="@+id/btn_app_setting" android:background="@drawable/app_setting" android:layout_width="55.0dip" android:layout_height="55.0dip" android:layout_alignParentLeft="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_camera_setting_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47.0dip"
        android:visibility="gone">
        <ImageView android:id="@+id/iv_camera_setting_content_arrow" android:background="@drawable/camera_setting_content_background_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_alignParentTop="true" />
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_camera_setting_content" android:background="@drawable/camera_setting_content_background" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="325.0dip" android:layout_height="100.0dip" android:layout_below="@id/iv_camera_setting_content_arrow" android:layout_centerHorizontal="true">
            <RelativeLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
                <com.martin.ads.omoshiroilib.ui.module.EffectsButton
                    android:id="@+id/btn_camera_touch"
                    android:background="@drawable/camera_flash_touch_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20.0dip" android:checked="false" android:layout_centerHorizontal="true" />
                <TextView android:textSize="11.0dip" android:textColor="@drawable/setting_color_selector" android:id="@+id/tv_camera_touch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="6.0dip" android:text="触屏拍摄" android:layout_alignBottom="@id/btn_camera_touch" android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
                <com.martin.ads.omoshiroilib.ui.module.EffectsButton
                    android:id="@+id/btn_camera_time_lapse"
                    android:background="@drawable/camera_flash_time_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20.0dip" android:checked="false" android:layout_centerHorizontal="true" />
                <TextView android:textSize="11.0dip" android:textColor="@drawable/setting_color_selector" android:id="@+id/tv_camera_time_lapse" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="6.0dip" android:text="延时拍摄" android:layout_alignBottom="@id/btn_camera_time_lapse" android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
                <com.martin.ads.omoshiroilib.ui.module.EffectsButton
                    android:id="@+id/btn_camera_light"
                    android:background="@drawable/camera_flash_light_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20.0dip" android:checked="false" android:layout_centerHorizontal="true" />
                <TextView android:textSize="11.0dip" android:textColor="@drawable/setting_color_selector" android:id="@+id/tv_camera_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="6.0dip" android:text="闪光灯" android:layout_alignBottom="@id/btn_camera_light" android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
                <com.martin.ads.omoshiroilib.ui.module.EffectsButton
                    android:id="@+id/btn_camera_picture_type"
                    android:background="@drawable/border_camera" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20.0dip" android:checked="false" android:layout_centerHorizontal="true" />
                <TextView android:textSize="11.0dip" android:textColor="@drawable/setting_color_selector" android:id="@+id/tv_camera_picture_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="6.0dip" android:text="小窗" android:layout_alignBottom="@id/btn_camera_picture_type" android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/filter_list"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="94.0dip"
        android:padding="5.0dip"
        android:scrollbars="none"
        android:visibility="invisible"
        android:background="#88000000"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/test_layout"
        android:orientation="horizontal">
        <Button
            android:id="@+id/record_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:background="#44000000"
            android:textColor="#dddddd"
            android:text="record"
            android:visibility="invisible"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_control_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.martin.ads.omoshiroilib.ui.module.EffectsButton android:id="@+id/btn_switch_filter" android:background="@drawable/ic_choose_filter" android:layout_width="55.0dip" android:layout_height="55.0dip" android:checked="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" />
        <ImageView android:id="@+id/iv_new_filter_tip" android:background="@drawable/effect_red_point" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12.0dip" android:layout_marginRight="12.0dip" android:layout_alignTop="@id/btn_switch_filter" android:layout_alignRight="@id/btn_switch_filter" />
        <com.martin.ads.omoshiroilib.ui.module.EffectsButton android:id="@+id/btn_switch_face" android:background="@drawable/ic_choose_face" android:layout_width="55.0dip" android:layout_height="55.0dip" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" />
        <com.martin.ads.omoshiroilib.ui.module.RecordButton
            android:id="@+id/btn_takePicture" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="11.0dip" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_frag_camera_action_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120.0dip"
        android:src="@drawable/tip_camera_action"
        android:visibility="visible" />

    <ImageView android:id="@+id/iv_focus_anim_view" android:background="@drawable/camera_btn_focus" android:visibility="gone" android:layout_width="101.0dip" android:layout_height="101.0dip" />

</RelativeLayout>
